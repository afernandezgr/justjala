<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tableName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Mesa #"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/fontSizeTableName"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonCheckTable"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#6bbbd6"
            android:shadowColor="@color/cardview_dark_background"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:text="Check"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toStartOf="@+id/tableBill"
            app:layout_constraintStart_toEndOf="@+id/tableName"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@android:color/holo_blue_bright" />

        <Button
            android:id="@+id/buttonAddDish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:background="#0ae7cd"
            android:text="+"
            android:textSize="@dimen/fontSizeIconPlus"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tableBill"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_purple"
            android:text="100,50â‚¬"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/fontSizeBill"
            android:textStyle="normal|bold"
            app:layout_constraintEnd_toStartOf="@+id/buttonAddDish"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
